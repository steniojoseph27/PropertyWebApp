@model IEnumerable<PropertyWebApp.ViewModels.ListPropertyViewModel>

@{
    ViewData["Title"] = "List of Properties";
}

    <div>
        <h1 class="display-4">@ViewData["Title"]</h1>
        <table class="table table-striped table-bordered">
            <tr>
                
                <th>Address</th>
                <th>Year Built</th>
                <th>List Price $</th>
                <th>Monthly Rent $</th>
                <th>Gross Yield %</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>@item.Address</td>
                    <td>@item.YearBuilt</td>
                    <td>@(string.Format("{0:C}", item.ListPrice))</td>
                    <td>@(string.Format("{0:C}", item.MonthlyRent))</td>
                    <td>@($"{Math.Round(item.GrossYield,2)}%") </td>
                    <td style="text-align: center;">
                        <button class="btn btn-sm btn-primary btnSave" > Save</button>
                    </td>
                </tr>
            }
        </table>
    </div>
